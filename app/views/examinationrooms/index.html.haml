-#  This file is app/views/examinationrooms/index.html.haml
%h1 Proctor Management Module

=flash[:title] 
<br>
= flash[:notice]
<br>
%a.m5{:href => "/"} HOME
%a.m5{:href => "/abouts"} ABOUT US


.link
  
  =link_to ' Add Proctor', new_examinationroom_path

   


.containner
  .containerLeft
  
   

      
    = form_tag examinationrooms_path,:controller => 'examinationrooms', :action => 'search', :method => 'get' ,id: "search" do 
      = label_tag(:q, "Search by room :") 
      = text_field_tag :search , params[:search] , placeholder: "Search Room", :class => 'input' 
      = submit_tag 'Search' 
      

    %table#examinationrooms
      %thead
        %tr
          %th Room_id
          %th Room_name
          %th Date_time
          
      %tbody
        - @examinationrooms.each do |examinationroom|
          %tr
            %td= examinationroom.room_id
            %td= examinationroom.room_name
            %td= examinationroom.date_time
           

  .containerRight1  
  
    = form_tag(examinationrooms_path(@firstname), action: "Proctor",id: "search",name: "search_by" , method: "get",from: "search_by") do 
      = label_tag(:q, "Search by name :") 
      = text_field_tag :search_from, params[:search_by], placeholder: "Search Name", :class => 'input' 
      = submit_tag "Search"
  
    
    



    %table#proctors
      %thead
        %tr
          %th Proctor_id
          %th Firstname
          %th Lastname
          %th Position 
          %th Room_id
          %th More Info
        %tbody
        - @proctor.each do |proctor|
          %tr
            %td= proctor.proctor_id
            %td= proctor.firstname
            %td= proctor.lastname
            %td= proctor.position
            %td= proctor.procroom_id
            %td= link_to "Details about #{proctor.firstname}", examinationroom_path(proctor.proctor_id)
