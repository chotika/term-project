-#  This file is app/views/examinationrooms/index.html.haml
%h1 Proctor Management Module
%a.m5{:href => "/"} HOME
%a.m5{:href => "/abouts"} ABOUT US

.link
  =link_to ' Add Proctor', new_examinationroom_path

   


.containner
  .containerLeft
   
      
    = form_tag("/search", method: "get",from: "search-form") do 
      = label_tag(:q, "Search by room :") 
      = text_field_tag :search_from, params[:search_from], placeholder: "Search room", :class => 'input' 
      = submit_tag "Search", :class => 'submit' 
      = link_to_function "Clear", "$('search_field').clear()" 

    %table#examinationrooms
      %thead
        %tr
          %th Room_id
          %th Room_name
          %th Date_time
          
      %tbody
        - @examinationrooms.each do |examinationroom|
          %tr
            %td= examinationroom.room_id
            %td= examinationroom.room_name
            %td= examinationroom.date_time
           

  .containerRight1  
  
    = form_tag("/search", method: "get") do 
      = label_tag(:q, "Search by name :") 
      = text_field_tag(:q) 
      = submit_tag("Search")
     
      = link_to_function "Clear", "$('search_field').clear()" 

    %table#proctors
      %thead
        %tr
          %th Proctor_id
          %th Firstname
          %th Lastname
          %th Position 
          %th Room_id
          %th More Info
        %tbody
        - @proctor.each do |proctor|
          %tr
            %td= proctor.proctor_id
            %td= proctor.firstname
            %td= proctor.lastname
            %td= proctor.position
            %td= proctor.procroom_id
            %td= link_to "Details about #{proctor.firstname}", examinationroom_path(proctor.proctor_id)
